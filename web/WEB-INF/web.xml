<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login.jsp</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.jsp</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>studentIndex.jsp</servlet-name>
        <jsp-file>/WEB-INF/jsp/studentIndex.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentIndex.jsp</servlet-name>
        <url-pattern>/studentIndex</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>teacherIndex.jsp</servlet-name>
        <jsp-file>/WEB-INF/jsp/teacherIndex.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherIndex.jsp</servlet-name>
        <url-pattern>/teacherIndex</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>gotoModPwd</servlet-name>
        <jsp-file>/WEB-INF/jsp/modPassword.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>gotoModPwd</servlet-name>
        <url-pattern>/jsp/modp</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>